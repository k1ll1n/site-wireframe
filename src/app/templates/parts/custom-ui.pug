mixin burger(status)
    div(class="burger" active=`${status}`)
        span
        span
        span

mixin arrow()
    div(class="arrow")&attributes(attributes)
        span
        span

mixin float-container(from)
    div(class="float-container" show="no" out-from=`${from}` ss-container)&attributes(attributes)
        div.float-block
            div.float-header
                +arrow(direction=`${from}`)
            div.float-body
                block